---
import Link from '../atoms/Link.astro';
import Logo from '../atoms/Logo.astro';
import Navigation from '../molecules/Navigation.astro';

const { slug } = Astro.props;
const host = import.meta.env.APP_URL;
---

<header class={slug}>
  <div>
    <Link url={host}>
      <Logo />
    </Link>
    <Navigation slug={slug} />
  </div>
</header>

<style>
  header {
    align-items: center;
    background-color: #fff;
    background-color: hsl(var(--header-bg-color, 0 0% 100%));
    min-block-size: var(--header-height, 3.5rem);
    border-block-end: 1px solid #14043320;
    padding: 1em;
  }

  @media (min-width: 40em) {
    header {
      --header-height: 5rem;
    }
  }

  header.om-butikken {
    --header-bg-color: 210 2% 78% / 0.1;
  }

  div {
    align-items: center;
    block-size: 100%;
    display: flex;
    inline-size: min(80rem, 100vw - 2rem);
    justify-content: space-between;
    margin-inline: auto;
  }
</style>
