---
import ManufacturCard from './ManufacturCard.astro';

const { items } = Astro.props;
---

<ul>
  {items.map((item) => <ManufacturCard item={item} />)}
</ul>

<style>
  ul {
    display: grid;
    /* flex-wrap: wrap; */
    gap: 2rem;
    list-style-type: none;
    grid-template-columns: repeat(auto-fit, minmax(6rem, 12rem));
  }
</style>
