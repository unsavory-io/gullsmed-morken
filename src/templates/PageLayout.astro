---
import '../styles/reset.css';
import '../styles/global.css';

import Header from '../organisms/Header.astro';
import Footer from '../organisms/Footer.astro';

const { title, slug } = Astro.props;
---

<html lang="nb-NO">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Infant:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style lang="scss">
      main {
        // @include grid;
        margin-block: 4rem;
      }
    </style>
  </head>

  <body>
    <Header slug={slug} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
